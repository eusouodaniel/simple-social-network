<div class="row">
  <div class="col m12">
    <div class="row">
    	 <div class="row">
          <div class="col m12">
            <h5>Editar post</h5>
          </div>
        </div>
      <div class="card hoverable">
        <div class="card-content">
          <div class="row">
            <div class="col m12">
            	<%= form_for @post do |f| %>
                <div class="input-field">
                  <%= f.text_area :body, placeholder: "O que você está pensando?", class: "materialize-textarea col l9" %>
                </div>
                <%= f.submit "Enviar", class: "btn red lighten-2" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
     
    </div>
  </div>
</div>